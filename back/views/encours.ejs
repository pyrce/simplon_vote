<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/head %>
</head>

<body class="container">

  <header>
    <% include partials/header %>
  </header>

  <main>
    <section class="row">
    <% votes.forEach(element =>  { %>
      <article class="col-md-12">
   
        <div class="card">
          <div class="card-body">
            <p class="text-center"><b><%= element.subject %></b> <br /> <small>By <%= element.createdBy.login %></small></p>
            <p class="text-right"> <%= element.nbVote %>/ <%= element.quota %> nombre de vote ▶️</p>
            <div class="progress">
              <div class="progress-bar bg-warning" role="progressbar" style="width: 50%;" aria-valuenow="50"
                aria-valuemin="0" aria-valuemax="100">50%</div>
            </div>
          </div>
        </div><br/>
        
        <form action="/addVote" method="POST">
          <input type="hidden" value="<%= element._id %>">
     
          <% element.choices.forEach(function(evt)  { %>
           <input type="radio" value="<%= evt  %> "><%= evt %>

           <% })%>

           <input type="submit" value="Voter" class="btn btn-primary">
         
       
        
        </form>

      </article>
    
 

    


    <% });  %>

 
    </section>
  </main>

  <footer>
    <% include partials/footer %>
  </footer>

  <% include partials/modals %>


</body>

</html>